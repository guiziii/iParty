<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.playjoa.telasiparty.eventoFragment"
    android:background="#dedcdf">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrlMain"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:background="#6c6868">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/VollyEspecifico"
                    android:layout_weight="3.13"
                    android:background="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="#3c4045">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView7"
                    android:background="@drawable/calendarw"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtData"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:editable="false"
                    android:layout_marginLeft="8dp"
                    android:enabled="false"
                    android:autoText="false" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView9"
                    android:background="@drawable/clockw"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/txtHora"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="4dp"
                    android:enabled="false"
                    android:editable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="  R$: "
                    android:id="@+id/textView5"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtpreco"
                    android:textColor="@android:color/white"
                    android:autoText="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:id="@+id/imageView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sobre o evento:"
                android:id="@+id/textView4"
                android:textColor="#ff000000"
                android:layout_marginLeft="30dp" />

            <ScrollView
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neste fodendo evento voce vai poder tracar varias novinhas, ouvir altos traps, usar altos tipos de dorgas assim como pular q nem um retardado"
                    android:id="@+id/txtDescEvento"
                    android:layout_weight="0.46"
                    android:textSize="18dp"
                    android:gravity="center_horizontal" />
            </ScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:id="@+id/imageView14" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Endereço:"
                    android:id="@+id/textView8"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtEnderecoE" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Criador do evento:"
                    android:id="@+id/textView6"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtCriadorE" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Distância:"
                    android:id="@+id/textView3"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtDistanciaE" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usar o GPS"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundcorner5"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtNomeEvento"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
